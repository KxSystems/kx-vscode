{
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""]
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""]
  ],
  "onEnterRules": [
    {
      "beforeText": "^[{[(]",
      "action": {
        "indent": "indent"
      }
    },
    {
      "beforeText": "^s*[)}]]",
      "action": {
        "indent": "outdent"
      }
    }
  ],
  "comments": {
    "blockComment": ["/", "\\"],
    "lineComment": "//"
  },
  "wordPattern": "(`:[a-zA-Z0-9._/]*)|(`[a-zA-Z0-9._]*)|(-?\\d*\\.\\d\\w*)|([^\\`\\~\\$\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\<\\>\\/\\?\\s]+)"
}
