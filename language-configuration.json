{
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"", "notIn": ["string"] }
  ],
  "surroundingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"", "notIn": ["string"] }
  ],
  "onEnterRules": [
    {
      "beforeText": "^[{[(]",
      "action": {
        "indent": "indent"
      }
    },
    {
      "beforeText": "^s*[)}]]",
      "action": {
        "indent": "outdent"
      }
    }
  ],
  "comments": {
    "blockComment": ["/", "\\"],
    "lineComment": { "comment": "//" }
  },
  "wordPattern": "\\.?[a-zA-Z][a-zA-Z0-9_]*(?:\\.[a-zA-Z0-9_]+)*\\b"
}
