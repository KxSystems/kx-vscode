{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2019",
    "outDir": "out",
    "lib": ["ES2019", "WebWorker", "DOM", "DOM.Iterable"],
    "sourceMap": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false
  },
  "include": ["src/**/*", "server/**/*", "test/**/*"],
  "exclude": ["node_modules"]
}
